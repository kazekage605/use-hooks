{
  "name": "use-hook",
  "version": "1.0.0",
  "description": "记录日常用到react hooks",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "type": "lib/index.d.ts",
  "typings": "lib/index.d.ts",
  "files": [
    "lib/",
    "esm/"
  ],
  "author": "n1cy",
  "license": "MIT",
  "homepage": "https://github.com/n1cy/use-hooks",
  "repository": {
    "type": "git",
    "url": "https://github.com/n1cy/use-hooks"
  },
  "scripts": {
    "storybook": "start-storybook -p 9001",
    "build-storybook": "build-storybook",
    "build": "yarn build:cjs && yarn build:es",
    "build:cjs": "tsc",
    "build:es": "tsc -m esNext --outDir esm",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "storybook:upload": "gh-pages -d storybook-static --git \"$(which git)\""
  },
  "devDependencies": {
    "@babel/core": "^7.7.4",
    "@babel/plugin-syntax-dynamic-import": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "@babel/preset-react": "^7.7.4",
    "@babel/preset-typescript": "^7.7.4",
    "@storybook/addon-actions": "^5.2.6",
    "@storybook/addon-knobs": "^5.2.6",
    "@storybook/addon-notes": "^5.2.6",
    "@storybook/addon-options": "^5.2.6",
    "@storybook/react": "^5.2.6",
    "@types/jest": "^24.0.23",
    "@types/react": "^16.9.13",
    "babel-loader": "^8.0.6",
    "babel-plugin-dynamic-import-node": "^2.3.0",
    "fork-ts-checker-webpack-plugin": "^3.1.1",
    "gh-pages": "^2.1.1",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "ts-jest": "^24.2.0",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.2"
  },
  "dependencies": {
    "react": "^16.12.0",
    "react-dom": "^16.12.0"
  },
  "peerDependencies": {
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn build"
    }
  },
  "lint-staged": {
    "src/**.*.{ts,tsx}": [
      "git add"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "clearMocks": true,
    "coverageDirectory": "coverage",
    "testMatch": [
      "<rootDir>/test/**/*.test.(ts|tsx)"
    ]
  }
}
